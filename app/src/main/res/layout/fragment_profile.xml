                                app:layout_constraintTop_toBottomOf="@id/tv_countries_count" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <!-- Fotos -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/stat_photos"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/stat_countries"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/tv_photos_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="156"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="#6200EE"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_photos_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fotos"
                                android:textSize="12sp"
                                android:textColor="@android:color/darker_gray"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tv_photos_count" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Botones de AcciÃ³n -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_action_buttons"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/layout_travel_stats">

                        <Button
                            android:id="@+id/btn_edit_profile"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Editar Perfil"
                            android:textSize="14sp"
                            android:layout_marginEnd="8dp"
                            app:cornerRadius="8dp"
                            app:layout_constraintEnd_toStartOf="@id/btn_share_profile"
                            app:layout_constraintHorizontal_chainStyle="spread"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <Button
                            android:id="@+id/btn_share_profile"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Compartir"
                            android:textSize="14sp"
                            android:layout_marginStart="8dp"
                            app:cornerRadius="8dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/btn_edit_profile"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

